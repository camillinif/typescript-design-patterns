{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "sourceMap": true,
        "declaration": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "@creational/*": ["src/creational/*"],
            "@structural/*": ["src/structural/*"]
